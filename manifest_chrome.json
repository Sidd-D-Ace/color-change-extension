{
  "manifest_version": 3,
  "name": "KeySight",
  "version": "1.4",
  "description": "Navigate without sight. Map 10 custom keyboard shortcuts to click buttons and links instantly.",
  "permissions": [
    "commands",
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "KeySight Settings"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "keysight@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "MacCtrl+Shift+E"
      },
      "description": "Open KeySight Settings"
    },
    "quick-capture": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Turns on Quick Capture Mode"
    },
    "mouse-capture": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "Turns on Mouse Capture Mode"
    }
  }
}