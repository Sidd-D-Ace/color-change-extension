{
  "manifest_version": 2,
  "name": "KeySight",
  "version": "1.0",
  "description": "Navigate without sight. Map 10 custom keyboard shortcuts to click buttons and links instantly. Designed for screen reader users.",
  "permissions": [
    "commands",
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "KeySight Settings"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "keysight@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "trigger-1": { "description": "Trigger 1" },
    "trigger-2": { "description": "Trigger 2" },
    "trigger-3": { "description": "Trigger 3" },
    "trigger-4": { "description": "Trigger 4" },
    "trigger-5": { "description": "Trigger 5" },
    "trigger-6": { "description": "Trigger 6" },
    "trigger-7": { "description": "Trigger 7" },
    "trigger-8": { "description": "Trigger 8" },
    "trigger-9": { "description": "Trigger 9" },
    "trigger-10": { "description": "Trigger 10" },
    "open-settings": {
      "suggested_key": { "default": "Ctrl+Shift+F" },
      "description": "Open KeySight settings"
    }
  }
}