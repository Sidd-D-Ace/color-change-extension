{
  "manifest_version": 2,
  "name": "KeySight",
  "version": "1.4",
  "description": "Navigate without sight. Map 10 custom keyboard shortcuts to click buttons and links instantly.",
  "permissions": [
    "commands",
    "tabs",
    "storage",
    "<all_urls>",
    "notifications"
  ],
  "web_accessible_resources": [
    "popup.html",
    "popup.css",
    "popup.js"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "KeySight Settings"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "keysight@replace-this.com",
      "strict_min_version": "58.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+E",
        "mac": "MacCtrl+E"
      },
      "description": "Open KeySight Settings"
    },
    "quick-capture": {
      "suggested_key": {
        "default": "Ctrl+Alt+C",
        "mac": "MacCtrl+Alt+C"
      },
      "description": "Turns on Quick Capture Mode"
    },
    "mouse-capture": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Turns on Mouse Capture Mode"
    }
  }
}