{
  "manifest_version": 2,
  "name": "KeySight",
  "version": "1.1",
  "description": "Navigate without sight. Map 10 custom keyboard shortcuts to click buttons and links instantly. Designed for screen reader users.",
  "permissions": [
    "commands",
    "tabs",
    "storage",
    "<all_urls>",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "KeySight Settings"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "keysight@replace-this.com",
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open KeySight settings"
    },
    "quick-capture":  {
      "suggested_key" :{
        "default": "Ctrl+Alt+C"
      },
      "description": "Turns on Quick Capture Mode"
    },
    "mouse-capture":  {
      "suggested_key" :{
        "default": "Alt+M"
      },
      "description": "Turns on Mouse Capture Mode"
    }
  }
}